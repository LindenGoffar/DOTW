@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete a Room";
}

<h4>Are you sure you want to delete @Model.Room.RoomName?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.RoomName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.PlayerCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.PlayerCount)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Room.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
